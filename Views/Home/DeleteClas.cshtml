@model Teacherlog.Models.Clas

@{
    ViewData["Title"] = "DeleteClas";
}

<h1>DeleteClas</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Clas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room)
        </dd>
    </dl>
    <form asp-action="DeleteClass" method="post">
        <div class="form-group">
            <label asp-for="Id">Select Parameter to Delete:</label>
            <select asp-for="Id" class="form-control">
                @if (ViewBag.Clases != null)
                {
                    @foreach (var @clas in ViewBag.Clases)
                    {
                        <option value="@clas.Id">@clas.Room @clas.Time</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="CourseId">Select Parameter to Delete:</label>
            <select asp-for="CourseId" class="form-control">
                @if (ViewBag.Courses != null)
                {
                    @foreach (var course in ViewBag.Courses)
                    {
                        <option value="@course.Id">@course.CourseName</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="TeacherId">Select Student to Delete:</label>
            <select asp-for="TeacherId" class="form-control">
                @if (ViewBag.Teachers != null)
                {
                    foreach (var teachers in ViewBag.Teachers)
                    {
                        <option value="@teachers.Id">@teachers.FirstName @teachers.LastName</option>
                    }
                }
            </select>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
