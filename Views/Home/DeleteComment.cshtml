@model Teacherlog.Models.Comment

@{
    ViewData["Title"] = "DeleteComment";
}

<h1>DeleteComment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>

    <form asp-action="DeleteComment">
        <div class="form-group">
            <label asp-for="Id">Select Parameter to Delete:</label>
            <select asp-for="Id" class="form-control">
                @if (ViewBag.Comments != null)
                {
                    @foreach (var comment in ViewBag.Comments)
                    {
                        <option value="@comment.Id">@comment.Text</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="StudentId">Select Student to Delete:</label>
            <select asp-for="StudentId" class="form-control">
                @if (ViewBag.Students != null)
                {
                    foreach (var student in ViewBag.Students)
                    {
                        <option value="@student.Id">@student.FirstName @student.LastName</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="TeacherId">Select Student to Delete:</label>
            <select asp-for="TeacherId" class="form-control">
                @if (ViewBag.Teachers != null)
                {
                    foreach (var teachers in ViewBag.Teachers)
                    {
                        <option value="@teachers.Id">@teachers.FirstName @teachers.LastName</option>
                    }
                }
            </select>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
